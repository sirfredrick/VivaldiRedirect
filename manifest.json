{
    "name": "Vivaldi Redirect",
    "version": "2.0.0",
    "description": "Redirect URLs to support Vivaldi Browser",
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "background": {
        "scripts": ["background.js"],
        "persistent": true
    },
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "permissions": [
        "storage",
        "tabs",
        "background",
        "webRequest",
        "webRequestBlocking",
        "https://*.vivaldi.com/bk/*", "https://*.booking.com/*", "https://*.ebay.com/*", "https://*.amazon.com/*", "https://*.aliexpress.com/*", "https://*.homedepot.com/*", "https://*.target.com/*", "https://*.airbnb.com/*", "https://*.instacart.com/*", "https://*.walmart.com/*", "https://*.macys.com/*", "https://*.overstock.com/*", "https://*.rakuten.com/*", "https://*.expedia.com/*", "https://*.hulu.com/*", "https://*.morrisons.com/*", "https://*.agoda.com/*"
    ],
    "manifest_version": 2
}
